<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShopApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:height">29dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginEnd">43dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">128dp</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginEnd">43dp</item>
        <item name="android:layout_marginBottom">37dp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:height">46dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginStart">43dp</item>
        <item name="android:layout_marginEnd">43dp</item>
    </style>

    <style name="TextViewSignInWith">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">38dp</item>
        <item name="android:layout_marginStart">99dp</item>
        <item name="android:layout_marginEnd">99dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="MainPageOvalButton">
        <item name="android:background">@drawable/main_page_button_oval</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">38dp</item>
    </style>

    <style name="TextViewButton">
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_button_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewMainPageBlockTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_block</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonMainPageBlockTitle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

</resources>